<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= render "tags/form" %>
  <p>
    <% if true %>
      <% number = 0 %>
      <div id="files">
	<%= render :partial => "files/form", :locals => {:number => number} %>
      </div>
      <%= link_to "Add another file", 'javascript:', :id => "add_another_file" %>
    <% else %>
      <%-# File 1 -%>
      <%= f.label :asset, "File #1" %>
      <%= f.file_field :asset %><br>
      
      <%-# File 2 -%>
      <%= f.label :asset, "File #2" %>
      <%= f.file_field :asset %><br>
      
      <%-# File 3 -%>
      <%= f.label :asset, "File #3" %>
      <%= f.file_field :asset %><br>
    <% end %>
  </p>
  <%= f.submit %>
<% end  %>
