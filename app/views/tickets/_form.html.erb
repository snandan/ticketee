<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <% if true %>
      <% number = 0 %>
      <%= f.fields_for :assets do |asset| %>
	<p>
	  <%= asset.label :asset, "File ##{number += 1}" %>
	  <%= asset.file_field :asset %>
	</p>
      <% end %>

    <% else %>
      <%-# File 1 -%>
      <%= f.label :asset, "File #1" %>
      <%= f.file_field :asset %><br>
      
      <%-# File 2 -%>
      <%= f.label :asset, "File #2" %>
      <%= f.file_field :asset %><br>
      
      <%-# File 3 -%>
      <%= f.label :asset, "File #3" %>
      <%= f.file_field :asset %><br>
    <% end %>
  </p>
  <%= f.submit %>
<% end  %>
